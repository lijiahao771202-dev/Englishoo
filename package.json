{
  "name": "englishoo",
  "private": true,
  "version": "1.0.0",
  "description": "沉浸式英语词汇学习应用",
  "author": "lijiahao",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "npm run build && electron .",
    "electron:build": "npm run build && electron-builder --mac",
    "electron:build:dmg": "npm run build && electron-builder --mac dmg",
    "electron:build:zip": "npm run build && electron-builder --mac zip"
  },
  "build": {
    "appId": "com.englishoo.app",
    "productName": "Englishoo",
    "copyright": "Copyright © 2024 Lijiahao",
    "asar": false,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*",
      "!node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "public/pwa-512x512.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "identity": null
    },
    "dmg": {
      "title": "Englishoo",
      "icon": "public/pwa-512x512.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@supabase/supabase-js": "^2.86.2",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-virtual": "^3.13.13",
    "@types/canvas-confetti": "^1.9.0",
    "@types/d3-hierarchy": "^3.1.7",
    "@types/uuid": "^10.0.0",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.13.2",
    "canvas-confetti": "^1.9.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "d3-hierarchy": "^3.1.2",
    "date-fns": "^4.1.0",
    "edge-tts-universal": "^1.3.3",
    "fast-levenshtein": "^3.0.0",
    "framer-motion": "^12.23.24",
    "gsap": "^3.14.2",
    "idb": "^8.0.3",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-force-graph-2d": "^1.29.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "ts-fsrs": "^5.2.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251228.0",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/fast-levenshtein": "^0.0.4",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "puppeteer": "^24.31.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0"
  }
}